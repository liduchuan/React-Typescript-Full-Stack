{
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "jsx": "react-jsx",
    "lib": [
      "ES2015",
      "DOM",
      "DOM.Iterable"
    ],
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "noEmit": false,
    "declaration": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "skipLibCheck": true
  },
  "include": [
    "index.ts",
    "lib",
    "tailwind.config.ts"
  ],
  "exclude": [
    "**/*.stories.*",
    ".storybook/**/*"
  ]
}
